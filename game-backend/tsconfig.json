{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "lib",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*"
  ]
}
